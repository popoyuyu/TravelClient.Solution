@using TravelClient.Models

<h1>New Destination:</h1>

<form action="/destinations" method="post">
  <label for="country">Destination's Country</label>
  <input id="country" name="country" type="text">
  <label for="city">Destination's City</label>
  <input id="city" name="city" type="text">
  <label for="rating">Destination's Rating</label>
  <input id="rating" name="rating" type="number">
  <label for="review">Destination's Review</label>
  <input id="review" name="review" type="text">
  <button type="submit">Go!</button>
</form>


<h1>All Destinations:</h1>

<ol>
  @foreach (Destination destination in Model)
  {
    <ul>
      <li>ID: @destination.DestinationId</li>
      <li>Country: @destination.Country</li>
      <li>City: @destination.City</li>
      <li>Rating: @destination.Rating</li>
      <li>Review: @destination.Review</li>

    </ul>
    <a href="/Destinations/Details/@(destination.DestinationId)">
      <p>View Details</p>
    </a>
    <br>
  }
</ol>